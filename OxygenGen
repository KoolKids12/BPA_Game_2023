using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class OxygenGen : MonoBehaviour
{
    [SerializeField] public int oxygen = 0;
    float TimeInterval;
    [SerializeField] int time=3;

    // Start is called before the first frame update
    void Start()
    {
        
    }

    // Update is called once per frame
    void LateUpdate()
    {
        GameObject[] Gens1 = GameObject.FindGameObjectsWithTag("OxygenGen1");

        
        int ogens1 = Gens1.Length;

        if (TimeInterval >= time)
        {
            if (oxygen <= 9999999)
            {
                oxygen += (1 * ogens1);
            }
        }

        GameObject[] Gens2 = GameObject.FindGameObjectsWithTag("OxygenGen2");

        
        int ogens2 = Gens2.Length;

        if (TimeInterval >= time)
        {
            if (oxygen <= 9999999)
            {
                oxygen += (2 * ogens2);
            }
        }

        GameObject[] Gens3 = GameObject.FindGameObjectsWithTag("OxygenGen3");

        
        int ogens3 = Gens3.Length;

        if (TimeInterval >= time)
        {
            if (oxygen <= 9999999)
            {
                oxygen += (3 * ogens3);
            }
        }
    }
}
