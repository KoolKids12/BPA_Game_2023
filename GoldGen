using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class GoldGen : MonoBehaviour
{
    [SerializeField] public int gold = 0;
    float TimeInterval;
    [SerializeField] float time = 3;

    // Start is called before the first frame update
    void Start()
    {
        
    }

    // Update is called once per frame
    void LateUpdate()
    {
        GameObject[] Gens1 = GameObject.FindGameObjectsWithTag("GoldGen1");

        
        int ggens1 = Gens1.Length;

        if (TimeInterval >= time)
        {
            if (gold <= 9999999)
            {
                gold += (1 * ggens1);
            }
        }

        GameObject[] Gens2 = GameObject.FindGameObjectsWithTag("GoldGen2");

        
        int ggens2 = Gens2.Length;

        if (TimeInterval >= time)
        {
            if (gold <= 9999999)
            {
                gold += (2 * ggens1);
            }
        }

        GameObject[] Gens3 = GameObject.FindGameObjectsWithTag("GoldGen3");

        
        int ggens3 = Gens3.Length;

        if (TimeInterval >= time)
        {
            if (gold <= 9999999)
            {
                gold += (3 * ggens1);
            }
        }
    }
}
