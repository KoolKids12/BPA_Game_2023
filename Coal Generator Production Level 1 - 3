using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class CoalGen : MonoBehaviour
{
    [SerializeField] public int coal = 0;
    float TimeInterval;
    [SerializeField] float time=3;

    // Start is called before the first frame update
    void Start()
    {
        
    }

    // Update is called once per frame
    void LateUpdate()
    {
        GameObject[] Gens1 = GameObject.FindGameObjectsWithTag("CoalGen1");
        TimeInterval = TimeInterval + Time.deltaTime;
        
        int cgens1 = Gens1.Length;

        if (TimeInterval >= time)
        {
            if (coal <= 9999999)
            {
                coal += (1 * cgens1);
                TimeInterval = 0;
                Debug.Log("+1");
            }
        }

        GameObject[] Gens2 = GameObject.FindGameObjectsWithTag("CoalGen2");

        
        int cgens2 = Gens2.Length;

        if (TimeInterval >= time)
        {
            if (coal <= 9999999)
            {
                coal += (2 * cgens1);
            }
        }

        GameObject[] Gens3 = GameObject.FindGameObjectsWithTag("CoalGen3");

        
        int cgens3 = Gens3.Length;

        if (TimeInterval >= time)
        {
            if (coal <= 9999999)
            {
                coal += (3 * cgens1);
            }
        }
    }
}
